extends ../../layout

block content
  h2.display-data Delete User?
            
  table.table.table-bordered
    tr
      th Property
      th Value
        tr
          td Name
          td= display(user.name)


  form#user-form.form-horizontal(action="/admin/users/" + user._id + "/delete", method="POST")
    .form-actions
      a.btn.btn-warning(href="/admin/users") Back
      | 
      input.btn.btn-danger(type="submit", value="Delete")
